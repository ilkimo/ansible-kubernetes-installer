Vagrant.configure("2") do |config|
  # Specify the base box for Ubuntu 20.04 LTS
  config.vm.box = "ubuntu/focal64"

  # Assign a static IP or hostname
  config.vm.network "private_network", ip: "192.168.56.10"

  # Set the hostname (optional)
  config.vm.hostname = "ansible-test.local"

  # Disable the default synced folder (optional)
  config.vm.synced_folder ".", "/vagrant", disabled: false

  config.vm.provider "virtualbox" do |vb|
    vb.memory = 2048
    vb.cpus = 2
  end

  # Provisioning steps to set up SSH access
  config.vm.provision "shell", inline: <<-SHELL
    # Update and install OpenSSH server
    sudo apt-get update -y
    sudo apt-get install -y openssh-server

    # Create ansible user and set up SSH keys
    sudo useradd -m -s /bin/bash ansible
    sudo mkdir -p /home/ansible/.ssh
    sudo chmod 700 /home/ansible/.ssh

    # Copy the public key from the host machine
    sudo cp /vagrant/ssh_keys/id_rsa.pub /home/ansible/.ssh/authorized_keys
    sudo chmod 600 /home/ansible/.ssh/authorized_keys
    sudo chown -R ansible:ansible /home/ansible/.ssh

    # Allow ansible user to use sudo without a password
    echo "ansible ALL=(ALL) NOPASSWD: ALL" | sudo tee /etc/sudoers.d/ansible

    # Set Cgroup v2 for Kubernetes
    echo 'GRUB_CMDLINE_LINUX="systemd.unified_cgroup_hierarchy=1"' | sudo tee -a /etc/default/grub
    sudo update-grub
  SHELL
end
